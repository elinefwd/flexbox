body {
    display: flex;
    flex-direction: row;
    min-height: 100vh;
}

.outer-col-1 {
    /*Omdat deze div in een row-container staat, gaat flex-basis hier over de BREEDTE */
    flex-basis: 20vw;
    /*Het element mag niét groter worden dan de basis afmeting als er meer ruimte is */
    flex-grow: 0;
    /*Het element mag niét kleiner worden dan de basis afmeting als er minder ruimte is */
    flex-shrink: 0;
}

.outer-col-2 {
    display: flex;
    flex-direction: column;
    /*Omdat deze div in een row-container staat, gaat flex-basis hier over de BREEDTE. We willen dat dit item alle overgebleven ruimte inneemt, dus zetten we de breedte op auto en regelen we de rest met de grow-property*/
    flex-basis: auto;
    /*Het element mag wél groter worden dan de basis afmeting als er meer ruimte is */
    flex-grow: 1;
    /*Het element mag wél kleiner worden dan de basis afmeting als er minder ruimte is */
    flex-shrink: 1;
}

header {
    /*Omdat header in een column-container staat, gaat flex-basis hier over de HOOGTE y*/
